<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TextForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="ListBackgroundBrush" Color="#252526"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="AccentButtonBackgroundBrush" Color="#444444"/>

    <!-- Modern UI Additions -->
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#555555"/>
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="#333333"/>
    <SolidColorBrush x:Key="ListHeaderBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="ListSelectionBackgroundBrush" Color="#444444"/>
</ResourceDictionary>
