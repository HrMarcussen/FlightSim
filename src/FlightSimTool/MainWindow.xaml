<Window x:Class="FlightSimTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlightSim Layout Tool" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource TextForegroundBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header / Stats -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Active Profile:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock x:Name="TxtProfilePath" Text="None" VerticalAlignment="Center" Foreground="Gray"/>
        </StackPanel>

        <!-- Tabs -->
        <TabControl Grid.Row="1" Margin="0,0,0,10">
            <!-- TAB 1: Live Capture -->
            <TabItem Header="Live Windows">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Capture Toolbar -->
                    <WrapPanel Grid.Row="0" Margin="0,0,0,10">
                        <Button Content="Refresh Windows" Click="BtnRefresh_Click" Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="Create New Layout..." Click="BtnCreateLayout_Click" Padding="10,5" Margin="0,0,30,0"/>
                    </WrapPanel>

                    <!-- Main Window List -->
                    <ListView x:Name="ListWindows" Grid.Row="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Select" Width="50">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Handle" DisplayMemberBinding="{Binding Handle, StringFormat=X8}" Width="80"/>
                                <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="300"/>
                                <GridViewColumn Header="Class" DisplayMemberBinding="{Binding ClassName}" Width="150"/>
                                <GridViewColumn Header="Bounds" DisplayMemberBinding="{Binding BoundsString}" Width="150"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>

            <!-- TAB 2: Layout Editor -->
            <TabItem x:Name="TabEditor" Header="Layout Editor">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Editor Toolbar -->
                    <WrapPanel Grid.Row="0" Margin="0,0,0,10">
                        <Button Content="Load Layout..." Click="BtnLoad_Click" Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="Save Changes" Click="BtnSaveEditor_Click" Padding="10,5" Margin="0,0,30,0"/>
                        
                        <Button Content="Restore Layout" Click="BtnRestore_Click" Padding="10,5" Background="{DynamicResource AccentButtonBackgroundBrush}" FontWeight="Bold" Margin="0,0,10,0"/>
                        <Button Content="Start Overlays" Click="BtnOverlays_Click" Padding="10,5" Background="{DynamicResource AccentButtonBackgroundBrush}" FontWeight="Bold" Margin="0,0,10,0"/>
                        <Button Content="Stop Overlays" Click="BtnStopOverlays_Click" Padding="10,5" Margin="0,0,10,0"/>
                    </WrapPanel>

                    <!-- Editor DataGrid -->
                    <DataGrid x:Name="GridEditor" Grid.Row="1" AutoGenerateColumns="False" 
                              CanUserAddRows="False" CanUserDeleteRows="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Title Match" Binding="{Binding TitleLike}" Width="250"/>
                            <DataGridTextColumn Header="X" Binding="{Binding X}" Width="60"/>
                            <DataGridTextColumn Header="Y" Binding="{Binding Y}" Width="60"/>
                            <DataGridTextColumn Header="Width" Binding="{Binding Width}" Width="60"/>
                            <DataGridTextColumn Header="Height" Binding="{Binding Height}" Width="60"/>
                            <DataGridTextColumn Header="Border" Binding="{Binding BorderThickness}" Width="50" ToolTipService.ToolTip="Thickness of the black border"/>
                            <DataGridTextColumn Header="Cover" Binding="{Binding BorderCover}" Width="50" ToolTipService.ToolTip="Border Cover (Pixels)"/>
                            <DataGridTextColumn Header="TopExtra" Binding="{Binding BorderTopExtra}" Width="60" ToolTipService.ToolTip="Extra Top Border (Pixels)"/>
                            <DataGridCheckBoxColumn Header="Strip Title" Binding="{Binding StripTitleBar}" Width="70"/>
                            <DataGridCheckBoxColumn Header="Full Screen" Binding="{Binding FullScreen}" Width="70" ToolTipService.ToolTip="Maximize and strip title"/>
                            <DataGridCheckBoxColumn Header="Follow" Binding="{Binding Follow}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="TxtStatus" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
