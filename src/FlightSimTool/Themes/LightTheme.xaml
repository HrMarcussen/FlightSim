<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextForegroundBrush" Color="#000000"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="#000000"/>
    <SolidColorBrush x:Key="ListBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="AccentButtonBackgroundBrush" Color="#DDDDDD"/>

    <!-- Modern UI Additions -->
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="ListHeaderBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="ListSelectionBackgroundBrush" Color="#E0E0E0"/>
</ResourceDictionary>
